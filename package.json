{
	"name": "typescript_boilerplate",
	"version": "1.0.0",
	"description": "A boilerplate for developing applications using typescript.",
	"main": "app.ts",
	"scripts": {
		"start": "nodemon ./src/app.ts",
		"test": "mocha -r ts-node/register src/**/*.spec.ts",
		"test:watch": "mocha -w -r ts-node/register src/**/*.spec.ts --watch-files src/**/*.* --reporter list",
		"build": "tsc",
		"serve": "tsc-watch --onSuccess \"nodemon ./build/app.js\""
	},
	"author": "Brian Henson",
	"license": "ISC",
	"dependencies": {
		"dotenv": "^8.2.0",
		"nodemon": "^2.0.7",
		"ts-node": "^9.1.1",
		"typescript": "^4.1.3"
	},
	"devDependencies": {
		"@types/chai": "^4.2.14",
		"@types/mocha": "^8.2.0",
		"@types/node": "^14.14.31",
		"chai": "^4.2.0",
		"mocha": "^8.2.1",
		"tsc-watch": "^4.2.9"
	},
	"prettier": {
		"useTabs": true,
		"semi": true,
		"trailingComma": "es5",
		"singleQuote": false,
		"bracketSpacing": true
	},
	"eslintConfig": {
		"parserOptions": {
			"parser": "babel-eslint",
			"sourceType": "module"
		},
		"env": {
			"browser": true,
			"es6": true
		},
		"extends": [
			"eslint:recommended"
		],
		"rules": {
			"quotes": [
				"error",
				"double",
				{
					"avoidEscape": true
				}
			],
			"comma-dangle": [
				"error",
				{
					"arrays": "ignore",
					"objects": "always-multiline",
					"imports": "never",
					"exports": "never",
					"functions": "ignore"
				}
			],
			"arrow-parens": 0,
			"no-tabs": 0,
			"indent": [
				"error",
				"tab",
				{
					"SwitchCase": 1
				}
			],
			"no-console": 1
		}
	}
}
